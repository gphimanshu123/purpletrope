<style>
	.ContactPage {
		background-color: #EFEFF2;
		min-height: 100vh;
		padding: 0;
		margin: 0;
	}

	.ContactHeader {
		padding: 150px 0 40px 50px;
		text-align: left;
	}

	.ContactHeader h1 {
		font-family: 'Kommissar', Arial, sans-serif;
		font-size: 150px;
		font-weight: 900;
		color: #000;
		text-transform: uppercase;
		letter-spacing: 2px;
		margin: 0;
		line-height: 0.8;
	}

	.ContactContent {
		padding: 0 50px 60px;
		max-width: 800px;
		font-family: Arial, sans-serif;
		font-size: 18px;
		line-height: 1.6;
		color: #333;
		text-align: left;
	}

	.ContactContent p {
		margin: 0;
	}

	.ContactInfo {
		padding: 0 50px 40px;
		display: flex;
		flex-direction: column;
		gap: 30px;
	}

	.ContactItem {
		display: flex;
		align-items: center;
		gap: 20px;
	}

	.ContactIcon {
		width: 24px;
		height: 24px;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.ContactText {
		font-family: Arial, sans-serif;
		font-size: 18px;
		color: #333;
		font-weight: 500;
	}

	.ContactAddress {
		padding: 0 50px 100px;
		font-family: Arial, sans-serif;
		font-size: 18px;
		color: #333;
		line-height: 1.6;
	}

	.AddressTitle {
		font-weight: bold;
		margin-bottom: 10px;
	}

	.AddressLine {
		margin-bottom: 5px;
	}

	/* Desktop Layout */
	@media screen and (min-width: 1024px) {
		.ContactInfo {
			max-width: 600px;
		}

		.ContactAddress {
			max-width: 600px;
		}
	}

	/* Tablet */
	@media screen and (max-width: 768px) {
		.ContactHeader {
			padding: 120px 0 30px 30px;
		}

		.ContactHeader h1 {
			font-size: 100px;
		}

		.ContactContent {
			padding: 0 30px 40px;
			font-size: 16px;
		}

		.ContactInfo {
			padding: 0 30px 30px;
			gap: 25px;
		}

		.ContactText {
			font-size: 16px;
		}

		.ContactAddress {
			padding: 0 30px 80px;
			font-size: 16px;
		}
	}

	/* Mobile */
	@media screen and (max-width: 480px) {
		.ContactHeader {
			padding: 100px 0 20px 20px;
		}

		.ContactHeader h1 {
			font-size: 80px;
		}

		.ContactContent {
			padding: 0 20px 30px;
			font-size: 14px;
		}

		.ContactInfo {
			padding: 0 20px 25px;
			gap: 20px;
		}

		.ContactIcon {
			width: 20px;
			height: 20px;
		}

		.ContactText {
			font-size: 14px;
		}

		.ContactAddress {
			padding: 0 20px 60px;
			font-size: 14px;
		}
	}
</style>
