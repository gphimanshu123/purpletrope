const normalizePathname = (pathname: string) => {
	const path = pathname.replace(/\/$/, '');
	return path === '' ? '/' : path;
};

type NavItem = {
	label: string;
	href: string;
};

const ALL_NAV_ITEMS: NavItem[] = [
	{ label: 'HOME', href: '/' },
	{ label: 'SHOP', href: '/shop' },
	{ label: 'INFO', href: '/info' },
	{ label: 'WORK', href: '/work' },
	{ label: 'CONTACT', href: '/contact' },
	{ label: 'BLOGS', href: '/blog' }
];

const currentPath = normalizePathname(Astro.url.pathname);

const navItems = ALL_NAV_ITEMS.filter((item) => item.href !== currentPath);

if (currentPath !== '/') {
	const homeIndex = navItems.findIndex((item) => item.href === '/');
	if (homeIndex === -1) {
		const homeItem = ALL_NAV_ITEMS.find((item) => item.href === '/');
		if (homeItem) {
			navItems.unshift(homeItem);
		}
	} else if (homeIndex > 0) {
		const [homeItem] = navItems.splice(homeIndex, 1);
		navItems.unshift(homeItem);
	}
}
