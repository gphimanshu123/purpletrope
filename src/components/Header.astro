<header class="Header">
	<div class="HeaderLogo" id="headerLogo">
		<img src="/logo.png" alt="Purple Trope Logo" />
	</div>
</header>

<!-- Full Screen Overlay -->
<div class="Overlay" id="fullScreenOverlay">
	<div class="OverlayContent">
		<div class="OverlayClose" id="overlayClose">&times;</div>
		<div class="OverlayMenu">
			{navItems.map((item, index) => (
				<a href={item.href} class="OverlayMenuItem" data-delay={index} aria-current={item.href === currentPath ? 'page' : undefined}>
					<span class="MenuItemText">{item.label}</span>
				</a>
			))}
		</div>
	</div>
</div>

<script>
	// Header functionality
	document.addEventListener('DOMContentLoaded', function() {
		const headerLogo = document.getElementById('headerLogo');
		const overlay = document.getElementById('fullScreenOverlay');
		const overlayClose = document.getElementById('overlayClose');

		// Check if elements exist before adding event listeners
		if (!headerLogo || !overlay || !overlayClose) {
			console.error('Header elements not found');
			return;
		}

		// Open overlay when logo is clicked
		headerLogo.addEventListener('click', function() {
			overlay.classList.add('active');
			document.body.style.overflow = 'hidden'; // Prevent scrolling
			
			// Animate menu items with stagger effect
			const menuItems = overlay.querySelectorAll('.OverlayMenuItem') as NodeListOf<HTMLElement>;
			menuItems.forEach((item, index) => {
				item.style.opacity = '0';
				item.style.transform = 'translateY(30px)';
				
				setTimeout(() => {
					item.style.opacity = '1';
					item.style.transform = 'translateY(0)';
				}, 200 + (index * 150)); // 200ms base delay + 150ms per item
			});
		});

		// Close overlay when close button is clicked
		overlayClose.addEventListener('click', function() {
			// Reset menu items animation
			const menuItems = overlay.querySelectorAll('.OverlayMenuItem') as NodeListOf<HTMLElement>;
			menuItems.forEach((item) => {
				item.style.opacity = '';
				item.style.transform = '';
			});
			
			overlay.classList.remove('active');
			document.body.style.overflow = 'auto'; // Restore scrolling
		});

		// Close overlay when clicking outside content
		overlay.addEventListener('click', function(e) {
			if (e.target === overlay) {
				// Reset menu items animation
				const menuItems = overlay.querySelectorAll('.OverlayMenuItem') as NodeListOf<HTMLElement>;
				menuItems.forEach((item) => {
					item.style.opacity = '';
					item.style.transform = '';
				});
				
				overlay.classList.remove('active');
				document.body.style.overflow = 'auto';
			}
		});

		// Close overlay with Escape key
		document.addEventListener('keydown', function(e) {
			if (e.key === 'Escape' && overlay.classList.contains('active')) {
				// Reset menu items animation
				const menuItems = overlay.querySelectorAll('.OverlayMenuItem') as NodeListOf<HTMLElement>;
				menuItems.forEach((item) => {
					item.style.opacity = '';
					item.style.transform = '';
				});
				
				overlay.classList.remove('active');
				document.body.style.overflow = 'auto';
			}
		});
	});
</script>

