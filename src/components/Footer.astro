<style>
	@font-face {
		font-family: 'Kommissar';
		src: url('/fonts/Kommissar.woff2') format('woff2');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	.Footer {
		position: relative;
		z-index: 70;
	}

	.FooterBlocks {
		background: #000;
	}

	.FooterBlock {
		position: relative;
		display: inline-block;
		float: left;
		width: 33.333%;
		max-height: 600px;
		min-height: 420px;
		height: 41vw;
	}

	@media screen and (max-width: 768px) {
		.FooterBlock {
			max-height: 200px;
			min-height: 130px;
		}
	}

	.FooterBlock i {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: #fff;
	}

	.FooterBlock i svg {
		width: 100%;
		height: 100%;
		fill: #000;
	}

	.isDesktop .FooterBlock i svg {
		transition: opacity .3s;
	}

	.FooterBlockTag {
		text-align: center;
		position: absolute;
		left: 0;
		right: 0;
		top: 50%;
		transform: translateY(-50%);
		font-size: 64px;
		opacity: 1;
		color: #000;
		font-family: 'Gloria Hallelujah', cursive;
		font-weight: 400;
		white-space: pre-line;
		line-height: 1.2;
	}

	@media screen and (max-width: 768px) {
		.FooterBlockTag {
			font-size: 24px;
			top: 50%;
			transform: translateY(-50%);
		}
	}

	.isDesktop .FooterBlockTag {
		transition: opacity .3s;
	}

	.FooterBlockBack {
		position: absolute;
		top: 13.4%;
		left: 12.5%;
		right: 12.5%;
		bottom: 21.5%;
		opacity: 0;
		background-size: contain;
		background-position: 50%;
		background-repeat: no-repeat;
	}

	.isDesktop .FooterBlockBack {
		transition: opacity .3s;
	}

	body.isDesktop .FooterBlock:hover .FooterBlockBack,
	body.isNotDesktop .FooterBlock.active .FooterBlockBack {
		opacity: 1;
	}

	body.isDesktop .FooterBlock:hover i svg,
	body.isNotDesktop .FooterBlock.active i svg {
		opacity: 0;
	}

	.FooterBlock--black i {
		background: #000;
	}

	.FooterBlock--black i svg {
		fill: #fff;
	}

	.FooterBlock--black .FooterBlockTag {
		color: #fff;
		font-family: 'Gloria Hallelujah', cursive;
		font-weight: 400;
	}

	.FooterLinks {
		text-align: center;
		font-family: Kommissar;
		font-weight: 900;
		font-size: 16px;
		-webkit-user-select: none;
		-moz-user-select: none;
		-ms-user-select: none;
		user-select: none;
		text-transform: uppercase;
		padding: 47px 0 53px;
		background: #fff;
	}

	@media screen and (max-width: 768px) {
	.FooterLinksRow {
			display: flex;
			flex-direction: row;
			justify-content: flex-start;
			width: 100%;
			margin-bottom: 20px;
			padding: 0 10px 0 20px;
			box-sizing: border-box;
		}
	}

	@media screen and (max-width: 768px) {
		.FooterLinks {
			overflow: hidden;
			padding: 32px 0 49px;
			background: #fff;
			width: 100%;
			box-sizing: border-box;
		}
	}

	.FooterLinks a {
		position: relative;
		color: #000;
		display: inline-block;
		font-size: 3.75em;
		line-height: .98333333em;
		text-decoration: none;
	}

	.FooterLinks a.FooterLink--active {
		pointer-events: none;
	}

	.FooterLinks a:after {
		content: "";
		position: absolute;
		bottom: .375em;
		left: 0;
		width: 0;
		height: .0625em;
		background: #000;
		opacity: 0;
		transition: width 0s ease-in-out .15s, opacity .15s linear;
	}

	.isNotDesktop .FooterLinks a:after {
		transition: none !important;
	}

	.isDesktop .FooterLinks a:hover:after,
	.isNotDesktop .FooterLinks a:active:after {
		opacity: 1;
		width: 100%;
		transition: width .15s ease-in-out, opacity 0s;
	}

	.FooterLinks a.FooterLink {
		margin-right: .48333333em;
	}

	.FooterLinks a.FooterLink:after {
		bottom: -.05em;
		height: .1em;
	}

	.FooterLinksSocial {
		display: flex;
		justify-content: center;
		align-items: flex-start;
		flex-wrap: wrap;
		gap: 2.5em;
		margin-top: 1.5em;
	}

	.FooterLinksSocial .FooterLinksBlock {
		display: flex;
		flex-direction: column;
		align-items: center;
		margin: 0;
		gap: 0.25em;
	}

	.FooterLinksSocial .FooterLinksBlock a {
		font-family: inherit;
		font-weight: inherit;
		font-size: 1em;
	}

	@media screen and (max-width: 768px) {
		.FooterLinksInner,
		.FooterLinksSocial {
			display: flex;
			flex-direction: column;
			flex: 1;
			min-width: 0;
		}
	}

	@media screen and (max-width: 768px) {
		.FooterLinksInner {
			width: auto;
			margin-right: 0;
			flex: 0 0 auto;
		}
	}

	@media screen and (max-width: 768px) {
		.FooterLinksSocial {
			width: auto;
			flex: 1;
			margin-left: 60px;
		}
	}

	@media screen and (max-width: 768px) {
		.FooterLinksInner a.FooterLink {
			display: block;
			font-size: 56px;
			line-height: 1.2;
			margin: 0;
			padding: 0;
			border: none;
			background: transparent;
			color: #000;
			font-weight: bold;
			text-decoration: none;
			font-family: 'Kommissar', Arial, sans-serif;
			width: auto;
			text-align: left;
		}
	}

	@media screen and (max-width: 768px) {
		.FooterLinksInner a.FooterLink:after {
			display: none;
		}
	}

	@media screen and (max-width: 768px) {
		.FooterLinksSocial {
			display: flex;
			flex-direction: column;
			align-items: flex-start;
			gap: 8px;
			width: 48%;
		}
	}

	@media screen and (max-width: 768px) {
		.FooterLinksSocial .FooterLinksBlock {
			display: flex;
			flex-direction: column;
			align-items: flex-start;
			gap: 5px;
			font-family: Arial, sans-serif;
			font-weight: normal;
			margin: 0 0 10px 0;
			width: 100%;
		}
	}

	@media screen and (max-width: 768px) {
		.FooterLinksSocial .FooterLinksBlock a {
			font-size: 24px;
			line-height: 1.2;
			color: #000;
			text-decoration: none;
			font-weight: bold;
			font-family: 'Kommissar', Arial, sans-serif;
			display: block;
			padding: 0;
			border: none;
			background: transparent;
			margin-bottom: 8px;
			width: auto;
		}
	}

	.isMobile .FooterLinksSocial .FooterLinksBlock a:after {
		display: none;
	}

	.FooterLinksBlock {
		display: inline-block;
		font-family: Calibre;
		font-weight: 500;
		text-align: left;
		vertical-align: top;
		position: relative;
		letter-spacing: 0;
		top: 3px;
		margin: .1875em -.125em 0 2.125em;
	}

	.FooterLinksBlock a,
	.FooterLinksBlock span {
		font-size: 1em;
		line-height: 1.75em;
	}

	.isMobile .FooterLinksBlock--sep {
		display: none;
	}

	.FooterLinksBlock--sep svg {
		width: 1.625em;
		height: 2.8125em;
	}

	.FooterLinksBlock--sep.s1 {
		margin: 0 -.9375em 0 -.875em;
	}

	.FooterLinksBlock--sep.s2 {
		margin: 0 -.75em 0 .9375em;
	}

	.FooterLinksBlock--disclamer {
		color: #c3c5c8;
		text-transform: none;
	}

	@media screen and (max-width: 768px) {
		.FooterLinksBlock--disclamer {
			width: 100%;
			text-align: center;
			margin-top: 30px;
			text-transform: uppercase;
			font-weight: 600;
			font-size: 12px;
			color: #666;
			clear: both;
		}
	}

	.clearfix:after {
		content: "";
		display: table;
		clear: both;
	}
</style>
